{
    "manifest_version":2,
    "name":"RevealSlideShow",
    "version":"0.0.1",
    "author":[
        "[https://github.com/simontaurus Simon Stier]"
    ],
    "url":"https://github.com/simontaurus/mediawiki-extensions-RevealSlideShow",
    "descriptionmsg":"reveal-slide-show-desc",
    "namemsg":"reveal-slide-show-name",
    "license-name":"AGPL-3.0-or-later",
    "type":"editor",
    "requires":{
        "MediaWiki":">= 1.31"
    },
    "MessagesDirs":{
        "RevealSlideShow":[
            "i18n"
        ]
    },
    "ResourceModules":{
        "ext.RevealSlideShow":{
            "localBasePath":"modules/ext.RevealSlideShow",
            "remoteExtPath":"RevealSlideShow/modules/ext.RevealSlideShow",
            "styles":[
                "RevealSlideShow.css"
            ],
            "scripts":[
                "RevealSlideShow.js"
            ],
            "position":"bottom"
        }
    },
    "AutoloadClasses":{
        "RevealSlideShow":"includes/RevealSlideShow.php"
    },
    "Hooks":{
        "BeforePageDisplay":"RevealSlideShow::onBeforePageDisplay"
    }
}
